<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.github.bordertech.restfriends</groupId>
		<artifactId>sample-parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<packaging>jar</packaging>

	<artifactId>sample-test-soapui</artifactId>
	<name>sample-test-soapui</name>

	<description>Test REST API with SOAP UI</description>

	<properties>
		<enforcer.fail>false</enforcer.fail>
	</properties>

	<profiles>
		<profile>
			<id>soapui-repos</id>
			<activation>
				<property>
					<name>!no-soapui-repo</name>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>soapui</id>
					<url>http://www.soapui.org/repository/maven2/</url>
				</repository>
				<repository>
					<id>smartbear</id>
					<url>http://smartbearsoftware.com/repository/maven</url>
				</repository>
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>soapui-plugin</id>
					<url>http://www.soapui.org/repository/maven2/</url>
				</pluginRepository>
				<pluginRepository>
					<id>smartbear-plugin</id>
					<url>http://smartbearsoftware.com/repository/maven</url>
				</pluginRepository>
			</pluginRepositories>
		</profile>
	</profiles>

	<dependencies>

		<!-- REST Server LDE -->
		<dependency>
			<groupId>com.github.bordertech.restfriends</groupId>
			<artifactId>sample-app-lde</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>

		<!-- JUNIT -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>

		<!-- SOAPUI -->
		<dependency>
			<groupId>com.smartbear.soapui</groupId>
			<artifactId>soapui</artifactId>
			<version>5.5.0</version>
			<scope>test</scope>
			<exclusions>
				<!-- These are mainly GUI artifacts not needed in the headless test runner-->
				<!-- JGoodies -->
				<exclusion>
					<groupId>com.jgoodies</groupId>
					<artifactId>forms</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.jgoodies</groupId>
					<artifactId>looks</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.jgoodies</groupId>
					<artifactId>binding</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- SOAPUI Swagger plugin -->
		<dependency>
			<groupId>com.smartbear</groupId>
			<artifactId>soapui-swagger-plugin</artifactId>
			<version>2.1</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>com.smartbear</groupId>
					<artifactId>ready-api-soapui-pro</artifactId>
				</exclusion>
